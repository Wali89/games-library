<h1>Edit <%= @game.name %></h1>

<form action="/games/<%= @game.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name</label>
  <input type="text" name="game[name]" id="name" value="<%= @game.name %>">

  <% Platform.all.each do |platform| %>
    <label><%= platform.name %></label>
    <input type="checkbox" name="genres[]" value="<%= platform.id %>" id="<%= platform.name %>" <%='checked' if @game.platforms.include?(platform) %>>
  <% end %>

  <input type="submit" value="Save">
</form>